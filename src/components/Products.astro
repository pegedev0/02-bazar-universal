---
import RatingStars from "./RatingStars.jsx"
const { products } = Astro.props
---

{
    products.map(({ id, title, description, price, rating, images }: { id:string ,title: string, description: string, price: number, rating: number, images: string[] }) => (
        <a href={`/items/:${id}`}>
            <section class="flex gap-10 mt-10 p-2 rounded-lg hover:bg-neutral-100 transition-all duration-200 ease-in-out hover:scale-105 scale-100">
                <img 
                    class="rounded-full w-32 h-32"
                    src={images[0]} 
                    alt={title} 
                    loading="lazy" 
                    decoding="async"
                />
                
                <div class="flex flex-col">
                    <h3 class="text-2xl font-bold">{title}</h3>
                    <p class="text-pretty mb-5">{description}</p>
                    <div class="flex justify-between">
                        <span class="font-bold text-2xl">{price}$</span>
                        <RatingStars rating={rating} />
                    </div>
                </div>
            </section>
        </a>
    ))
}
